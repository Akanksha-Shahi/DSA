#include <iostream>
using namespace std;

void merge(int arr[],int temp[], int st, int mid, int end){
    int i= st, j = mid+1 ;
    int k=st;
    while(i<= mid && j<=end){
        if(arr[i] <= arr[j]){
            temp[k] = arr[i];
            i++;
            k++;
        }
        else{
            temp[k] = arr[j];
            j++;
            k++;
    }}
    while (i<= mid){
        temp[k] = arr[i];
        i++;
        k++;
    } 
    while (j<=end){
        temp[k] = arr[j];
        j++;
        k++;
    }
    for (int idx = st; idx<= end; idx++){
        arr[idx] = temp[idx];
    }
}
void mergeSort(int arr[],int temp[], int st, int end){
    if(st < end){
        int mid = (st + end) / 2;
        mergeSort(arr,temp, st, mid);
        mergeSort(arr,temp, mid + 1, end);
        merge(arr, temp,st, mid, end);
    }
}
int main(){
    
    int n ,i;
    int arr[100];
    int temp[100];
    cout << "Enter the number of elements in the array: ";
  
    cin >> n;
    
    cout << "Enter the elements of the array: "<<endl;
    for(i = 0; i < n; i++) {
        cin >> arr[i];
    }
    mergeSort(arr, temp, 0, n - 1);
    cout << "Sorted array: ";
    for( i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
    return 0;
}
