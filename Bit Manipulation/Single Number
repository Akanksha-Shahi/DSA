// Single Number
#include<bits/stdc++.h>
using namespace std;
// brute: using map data structure
int singleNum( vector<int> &nums){
    map<int, int> mpp;
    for( int i =0; i< nums.size(); i++){
        mpp[nums[i]]++;
    }
    for( auto it: mpp){
        if( it.second ==1) return it.first;   
    }
}
// optimal : using XOR 
int numXor( vector< int> &nums){
    int xor =0;
    for( int i =0; i< nums.size(); i++){
        xor^= nums[i];
    }
    return xor;
}
int main(){
    vector<int> nums = {4,1,2,1,2};
    cout << singleNum( nums) << endl;
    cout << numXor( nums) << endl;
    return 0;
}



// Single Number-II
#include<bits/stdc++.h>
using namespace std;
// brute: use map
int singleNum( vector<int> &nums){
    map<int, int> mpp;
    for( int i =0; i< nums.size(); i++){
        mpp[nums[i]]++;
    }
    for( auto it: mpp){
        if( it.second ==1) return it.first;   
    }
}
// better: use bitwise
int singleNumBit( vector<int> &nums){
    int result =0;
    for( int i =0; i<32; i++){
        int sum =0;
        for( int j =0; j< nums.size(); j++){
            if( nums[j] & ( 1<< i)){
                sum++;
            }
        }
        if( sum %3 !=0){
            result |= ( 1<< i);
        }
    }
    return result;
}
// optimal 1: using sorting
int singleNumSort( vector<int> &nums){
    sort( nums.begin(), nums.end());
    for( int i =0; i< nums.size(); i+=3){
        if( i+1 >= nums.size() || nums[i] != nums[i+1]){
            return nums[i];
        }
    }
    return -1;
}
// optimal 2: using the concept of buckets
int singleNumBucket( vector<int> &nums){
    int ones =0, twos =0;
    for( int i =0; i< nums.size(); i++){
        ones = ( ones ^ nums[i]) & ~twos;
        twos = ( twos ^ nums[i]) & ~ones;
    }
    return ones;
}
int main(){
    vector<int> nums = {2,2,3,2};
    cout << singleNum( nums) << endl;
    cout << singleNumBit( nums) << endl;
    cout << singleNumSort( nums) << endl;
    cout << singleNumBucket( nums) << endl;
    return 0;
}





// SINGLE NUMBER -III
#include<bits/stdc++.h>
using namespace std;
// brute: using hash map
vector<int> single( vector<int> &nums){
    map<int, int> mp;
    for( int i =0; i< nums.size(); i++){
        mp[nums[i]]++;
    }
    vector<int> ans;
    for( auto it: mp){ 
        if( it.second == 1) ans. push_back( it.first);
    }
    return ans;
}
// optimal: using bitwise and buckets
vector<int> singleXOR( vector<int> &nums){
    int xor =0;
    for( int i =0; i< nums.size(); i++){
        xor^= nums[i];
    }
    int rightmost = ( xor & xor-1) & xor;
    int b1=0, b2=0;
    for( int i =0; i< nums.size(); i++){
        if( nums[i] & rightmost) b1^= nums[i];
        else b2^= nums[i];
    }
    return {b1,b2};
}
int main(){
    vector<int> nums = {1,2,1,3,2,5};
    vector<int> ans1 = single( nums);
    cout << ans1[0] << " " << ans1[1] << endl;
    vector<int> ans2 = singleXOR( nums);
    cout << ans2[0] << " " << ans2[1] << endl;
    return 0;
}
