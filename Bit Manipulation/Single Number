// Single Number
#include<bits/stdc++.h>
using namespace std;
// brute: using map data structure
int singleNum( vector<int> &nums){
    map<int, int> mpp;
    for( int i =0; i< nums.size(); i++){
        mpp[nums[i]]++;
    }
    for( auto it: mpp){
        if( it.second ==1) return it.first;   
    }
}
// optimal : using XOR 
int numXor( vector< int> &nums){
    int xor =0;
    for( int i =0; i< nums.size(); i++){
        xor^= nums[i];
    }
    return xor;
}
int main(){
    vector<int> nums = {4,1,2,1,2};
    cout << singleNum( nums) << endl;
    cout << numXor( nums) << endl;
    return 0;
}



// Singlew Number-II
#include<bits/stdc++.h>
using namespace std;
// brute: use map
int singleNum( vector<int> &nums){
    map<int, int> mpp;
    for( int i =0; i< nums.size(); i++){
        mpp[nums[i]]++;
    }
    for( auto it: mpp){
        if( it.second ==1) return it.first;   
    }
}
// better: use bitwise
int singleNumBit( vector<int> &nums){
    int result =0;
    for( int i =0; i<32; i++){
        int sum =0;
        for( int j =0; j< nums.size(); j++){
            if( nums[j] & ( 1<< i)){
                sum++;
            }
        }
        if( sum %3 !=0){
            result |= ( 1<< i);
        }
    }
    return result;
}
