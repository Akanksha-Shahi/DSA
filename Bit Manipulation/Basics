// Convert to Binary using bit manipulation
#include<bits/stdc++.h>
using namespace std;
string convert2binary( int n ){
    string res ="";
    while( n!= 1){
        if( n%2 == 1) res+='1';
        else res += '0';
        n =n/2;
    }
    reverse ( res.begin(), res.end());
    return res;
}
int main(){
    int n = 10;
    cout << convert2binary(n) << endl;
    return 0;
}


// Convert to decimal
#include<bits/stdc++.h>
using namespace std;
string convert2Decimal( string x){
    int len = x.length();
    int p2 =1, num =0;
    for( int i = len-1; i>=0; i--){
        if( x[i] == '1') num += p2;
        p2 *= 2;
    }
    return to_string(num);
}
int main(){
    string x = "1010";
    cout << convert2Decimal(x) << endl;
    return 0;
}


// Count the no.of set bits
#include<bits/stdc++.h>
using namespace std;
int countBits( int n ){
    int count =0;
    while( n>0){
        if( n&1) count++;
        n = n>>1;
    }
    return count;
}
int main(){
    int n = 10;
    cout << countBits(n) << endl;
    return 0;
}


// Min bit flips to convert Number A to B
#include<bits/stdc++.h>
using namespace std;
int minBit( int start, int goal){
    int count =0;
    int ans = start^ goal;
    for( int i =0; i<32; i++){
        if( ans & ( 1<< i)) count ++;
    }
    return count;
}
int main(){
    int start = 10 , goal =7;
    cout<< minBit( start, goal)<< endl;
    return 0;
}


// Power Set
#include<bits/stdc++.h>
using namespace std;
void func( vector<int> &nums, vector<vector<int>> &ans){
    int n = nums.size();
    int subsets = 1<<n;
    for ( int num =0; num< subsets; num++){
        vector<int> list;
        for( int i =0; i<n; i++){
            if( num & ( 1<< i)){
                list.push_back( nums[i]);
            }
        }
        ans.push_back( list);
    }
}
int main(){
    vector<int> nums = {1,2,3};
    vector<vector<int>> ans;
    func( nums, ans);
    for( auto x: ans){
        for( auto y: x){
            cout << y << " ";
        }
        cout << endl;
    }
    return 0;
}
