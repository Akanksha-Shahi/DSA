#include <bits/stdc++.h>
using namespace std;
// brute: check each person
int func(matrix<int> &arr, int n ){
    vector<int> know(n,0);
    vector<int> iknow(n,0);
    for( int i =0; i<n; i++){
        for( int j =0; j<n; j++){
            if(arr[i][j]== 1){
                know[i]++;
                iknow[j]++;
            }
        }
    }
    for( int i =0; i<n; i++){
        if(know[i]==n-1 && iknow[i]==0) return i;
    }
    return -1;
}

// optimal: top and down pointer
int func1( vector<int> &arr, int n){
    int top =0, down =n-1;
    while( top<down){
        if( arr[top][down]== 1) top++;
        else if( arr[down][top]== 1) down--;
        else{
            top--; down--;
        }
        if( top> down) return -1;
        for( int i =0; i<n; i++){
            if( ( i == top) || ( i == down)) continue;
            if(arr[top][i]== 0 || arr[i][top]== 1) return -1;
        }
    }
    return top;
}
