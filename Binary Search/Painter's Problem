// Painters Partition Problem
#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;
int counStu( vector<int> & arr, int pages){
    int students= 1;
    long long pageStu = 0;
    int n = arr.size();
    for ( int i =0; i<n; i++){
        if ( pageStu + arr[i] <= pages){
            pageStu += arr[i];
        }
        else {
            students++;
            pageStu = arr[i];
        }
    }
    return students;
}
int findPages( vector <int> &arr, int n, int m ){
    if ( m>n) return -1;
    int low = *max_element(arr.begin(), arr.end());
    int high = accumulate( arr.begin(), arr.end(), 0);
    while( low <= high){
        int mid = ( low + high)/2;
        int students = counStu(arr, mid);
        if ( students <= m){
            high = mid -1;
        }
        else {
            low = mid +1;
        }
    }
    return low;
}
int findLargestMinDist ( vector<int> &boards, int k ){
    return findPages( boards, boards.size(), k);
}
int main(){
    int n, k;
    cout<<" Enter the number of boards and painters: ";
    cin>> n >> k;
    vector <int> arr(n);
    cout<<" Enter the lengths of the boards: ";
    for ( int i =0; i<n; i++){
        cin>> arr[i];
    }
    int result = findLargestMinDist(arr, k);
    cout<<" The minimum time to paint all boards is: "<< result << endl;
    return 0;
}
