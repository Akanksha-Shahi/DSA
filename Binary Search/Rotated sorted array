// Search element in rotated sorted array( unique elements)
#include <iostream>
#include <vector>
using namespace std;
int search(vector<int> & arr, int n, int k){
    int low=0, high = n-1;
    while(low<= high){
        int mid = (low + high)/2;
        if ( arr[mid]== k){
            return mid;
        }
        // left half is sorted
        if ( arr[low]<= arr[mid]){
            if ( k>= arr[low] && k<= arr [mid]){
                high = mid -1;
            }
            else {
                low = mid +1;
            }
        }
        // right half is sorted
        else {
            if ( k>= arr[mid] && k<= arr[high]){
                low = mid +1;
            }
            else {
                high = mid -1;
            }
        }
    }
    return -1;
}
int main(){
    int n;
    cout<<" Enter the size of the array: ";
    cin>> n;
    vector <int> arr(n);
    cout<<" Enter the elements of the array: ";
    for ( int i =0; i<n; i++){
        cin>> arr[i];
    }
    int target;
    cout<<" Enter the target element: ";
    cin>> target;
    int result = search(arr, n, target);
    if ( result != -1){
        cout<<" Element found at index: "<< result << endl;
    }
    else {
        cout<<" Element not found in the array. "<< endl;
    }
    return 0;
}


// Search element in rotated sorted array( duplicate elements)
#include <iostream>
#include <vector>
using namespace std;
int search(vector<int> & arr, int n, int k){
    int low=0, high = n-1;
    while(low<= high){
        int mid = (low + high)/2;
        if ( arr[mid]== k) return mid;
        if ( arr[low]== arr[mid] && arr[high]== arr[mid]){
            low++;
            high--;
            continue;    
        }
        // left half is sorted
        if ( arr[low]<= arr[mid]){
            if ( k>= arr[low] && k<= arr [mid]){
                high = mid -1;
            }
            else {
                low = mid +1;
            }
        }
        // right half is sorted
        else {
            if ( k>= arr[mid] && k<= arr[high]){
                low = mid +1;
            }
            else {
                high = mid -1;
            }
        }
    }
    return -1;
}
int main(){
    int n;
    cout<<" Enter the size of the array: ";
    cin>> n;
    vector <int> arr(n);
    cout<<" Enter the elements of the array: ";
    for ( int i =0; i<n; i++){
        cin>> arr[i];
    }
    int target;
    cout<<" Enter the target element: ";
    cin>> target;
    int result = search(arr, n, target);
    if ( result != -1){
        cout<<" Element found at index: "<< result << endl;
    }
    else {
        cout<<" Element not found in the array. "<< endl;
    }
    return 0;
}
