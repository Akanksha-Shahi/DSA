// brute: linear iteration on array
#include <iostream>
#include <vector>
using namespace std;
int firstandLast(vector<int> &arr, int n, int target){  
    int first= -1;
    int last = -1;
    for ( int i =0; i<=n-1; i++){
        if( arr[i] == target){
            if (first == -1) {
                first = i;
            }
            last = i;
        }
    }
    if ( first != -1 && last != -1){
        cout<<" First occurrence at index: "<< first << endl;
        cout<<" Last occurrence at index: "<< last << endl;
        return first; // or return last based on requirement
    }
    else {
        return -1; // target not found
    }
}
int main(){
    int n;
    cout<<" Enter the size of the array: ";
    cin>> n;
    vector <int> arr(n);
    cout<<" Enter the elements of the array: ";
    for ( int i =0; i<n; i++){
        cin>> arr[i];
    }
    int target;
    cout<<" Enter the target element: ";
    cin>> target;
    int result = firstandLast(arr, n, target);
    return 0;
}
