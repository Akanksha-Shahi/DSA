// brute: linear iteration on array
#include <iostream>
#include <vector>
using namespace std;
int firstandLast(vector<int> &arr, int n, int target){  
    int first= -1;
    int last = -1;
    for ( int i =0; i<=n-1; i++){
        if( arr[i] == target){
            if (first == -1) {
                first = i;
            }
            last = i;
        }
    }
    if ( first != -1 && last != -1){
        cout<<" First occurrence at index: "<< first << endl;
        cout<<" Last occurrence at index: "<< last << endl;
        return first; // or return last based on requirement
    }
    else {
        return -1; // target not found
    }
}
int main(){
    int n;
    cout<<" Enter the size of the array: ";
    cin>> n;
    vector <int> arr(n);
    cout<<" Enter the elements of the array: ";
    for ( int i =0; i<n; i++){
        cin>> arr[i];
    }
    int target;
    cout<<" Enter the target element: ";
    cin>> target;
    int result = firstandLast(arr, n, target);
    return 0;
}


// better: binary search approach
#include <iostream>
#include <vector>
using namespace std;
// Lower Bound
#include <iostream>
#include <vector>
using namespace std;
int lowerBound(vector<int> &arr, int n, int target){
    int low =0;
    int high = n -1;
    int ans = n;
    while(low <= high){
        int mid = (low + high)/2;
        if ( arr[mid]>= target){
            ans = mid;
            high = mid -1;
        }
        else {
            low = mid +1;
        }
    }
    return ans;
}
int upperBound(vector<int> &arr, int n, int target){
    int low =0;
    int high = n -1;
    int ans = n;
    while(low <= high){
        int mid = (low + high)/2;
        if ( arr[mid] > target){
            ans = mid;
            high = mid -1;
        }
        else {
            low = mid +1;
        }
    }
    return ans;
}
pair<int, int> firstAndLastOccurrence(vector<int> &arr, int n, int target){
    int lb = lowerBound(arr, n, target);
    if ( lb == n || arr[lb] != target) return {-1, -1}; // target not found
    return {lb, upperBound(arr, n, target) -1};
}
int main(){
    int n;
    cout<<" Enter the size of the array: ";
    cin>> n;
    vector <int> arr(n);
    cout<<" Enter the elements of the array: ";
    for ( int i =0; i<n; i++){
        cin>> arr[i];
    }
    int target;
    cout<<" Enter the target element: ";
    cin>> target;
    pair<int, int> result = firstAndLastOccurrence(arr, n, target);
    if ( result.first != -1){
        cout<<" First occurrence at index: "<< result.first << endl;
        cout<<" Last occurrence at index: "<< result.second << endl;
    }
    else {
        cout<<" Target not found in the array. "<< endl;
    }
    return 0;
}
