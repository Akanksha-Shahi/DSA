// brute
#include <iostream>
#include <vector>
using namespace std;
int findPeakElement(vector<int> & arr, int n){
    for ( int i =0; i<n; i++){
        if ( i ==0 || arr[i-1]<arr[i]>arr[i+1]){
            return i;
        }
        else if ( i== n-1){
            if ( arr[i]> arr[i-1]){
                return i;
            }
        }
    }
}
int main(){
    int n;
    cout<<" Enter the size of the array: ";
    cin>> n;
    vector <int> arr(n);
    cout<<" Enter the elements of the array: ";
    for ( int i =0; i<n; i++){
        cin>> arr[i];
    }
    int result = findPeakElement(arr, n);
    cout<<" The peak element is at index: "<< result << endl;
    return 0;
}
