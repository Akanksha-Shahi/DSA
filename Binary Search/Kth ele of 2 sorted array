// Kth element of 2 sorted arrays
#include<iostream>
#include<vector>
#include<algorithm>
using namespace std;
int kthElement( vector<int> &a, vector<int> &b, int k){
    int n1 = a.size();
    int n2 = b.size();
    if ( n1 > n2) return kthElement( b, a, k);
    int low = max( 0, k - n2);
    int high = min( k, n1);
    int left = k;
    int n = n1 + n2;
    while ( low <= high){
        int cut1 = ( low + high)>>1;
        int cut2 = k - cut1;
        int l1 = INT_MIN, l2 = INT_MIN;
        int r1 = INT_MAX, r2 = INT_MAX;
        if ( cut1 < n1) r1 = a[cut1];
        if ( cut2 < n2) r2 = b[cut2];
        if ( cut1 -1 >=0) l1 = a[cut1 -1];
        if ( cut2 -1 >=0) l2 = b[cut2 -1];
        if(l1<= r2 && l2 <= r1){
            return max( l1, l2);
        }
        else if ( l1 > r2){
            high = cut1 -1;
        }
        else {
            low = cut1 +1;
        }  
    }      
}
int main(){
    int n1, n2, k;
    cout<<" Enter the sizes of the two arrays: ";
    cin>> n1 >> n2;
    vector <int> arr1(n1);
    vector <int> arr2(n2);
    cout<<" Enter the elements of the first array: ";
    for ( int i =0; i<n1; i++){
        cin>> arr1[i];
    }
    cout<<" Enter the elements of the second array: ";
    for ( int i =0; i<n2; i++){
        cin>> arr2[i];
    }
    cout<<" Enter the value of k: ";
    cin>> k;
    int result = kthElement(arr1, arr2, k);
    cout<<" The kth element of the two sorted arrays is: "<< result << endl;
    return 0;
}
