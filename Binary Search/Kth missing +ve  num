// brute
#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;
int missingk(vector<int> &arr, int n, int k){
    for ( int i =0; i< n; i++){
        if ( arr[i] <=k){
            k++;
        }
        else {
            break ;}
    }
}
int main(){
    int n, k;
    cout<<" Enter the size of the array and k: ";
    cin>> n >> k;
    vector <int> arr(n);
    cout<<" Enter the elements of the array: ";
    for ( int i =0; i<n; i++){
        cin>> arr[i];
    }
    int result = missingk(arr, n, k);
    cout<<" The kth missing positive number is: "<< result << endl;
    return 0;
}


// optimal
#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;
int missingk(vector<int> &arr, int n, int k){
    int low =0;
    int high = n-1;
    while( low <= high){
        int mid = ( low + high)/2;
        int missing = arr[mid] - ( mid +1);
        if ( missing < k){
            low = mid +1;
        }
        else {
            high = mid -1;
        }
    }
    return k+ high +1;
}
int main(){
    int n, k;
    cout<<" Enter the size of the array and k: ";
    cin>> n >> k;
    vector <int> arr(n);
    cout<<" Enter the elements of the array: ";
    for ( int i =0; i<n; i++){
        cin>> arr[i];
    }
    int result = missingk(arr, n, k);
    cout<<" The kth missing positive number is: "<< result << endl;
    return 0;
}
