// brute:
#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;
long double minMaxDist( vector<int> &arr, int k){
    int n = arr.size();
    vector<int> howMany ( n-1, 0);
    for ( int gasStat= 1; gasStat <= k; gasStat++){
        long double maxSec =-1;
        int maxInd =-1;
        for( int i =0; i<n-1; i++){
            long double diff =(arr[i+1]- arr[i]);
            long double sec = diff/(long double)( howMany[i] +1);
            if ( sec > maxSec){
                maxSec = sec;
                maxInd = i;
            }
        }
        howMany[maxInd]++;
    }
    long double result =-1;
    for ( int i =0; i<n-1; i++){
        long double diff =(arr[i+1]- arr[i]);
        long double sec = diff/(long double)( howMany[i] +1);
        result = max( result, sec);
    }
    return result;
}
int main(){
    int n, k;
    cout<<" Enter the number of gas stations and additional gas stations: ";
    cin>> n >> k;
    vector <int> arr(n);
    cout<<" Enter the positions of the gas stations: ";
    for ( int i =0; i<n; i++){
        cin>> arr[i];
    }
    long double result = minMaxDist(arr, k);
    cout<<" The minimum possible value of the maximum distance between adjacent gas stations is: "<< result << endl;
    return 0;
}

// better:
#include <iostream>
#include <vector>
#include <algorithm>
#include <queue>
using namespace std;
long double minMaxDist( vector<int> &arr, int k){
    int n = arr.size();
    vector<int> howmany ( n-1, 0);
    priority_queue< pair< long double, int> > pq;
    for ( int i =0; i<n-1; i++){
        pq.push({arr[i+1]- arr[i], i});
    }
    for ( int gasStat= 1; gasStat <= k; gasStat++){
        auto top = pq.top();
        pq.pop();
        int secInd = top.second;
        howmany[secInd]++;
        long double diff = (arr[secInd+1]- arr[secInd]);
        long double newSec = diff/( long double)( howmany[secInd] +1);
        pq.push({ newSec, secInd});
    }
    return pq.top().first;
}
int main(){
    int n, k;
    cout<<" Enter the number of gas stations and additional gas stations: ";
    cin>> n >> k;
    vector <int> arr(n);
    cout<<" Enter the positions of the gas stations: ";
    for ( int i =0; i<n; i++){
        cin>> arr[i];
    }
    long double result = minMaxDist(arr, k);
    cout<<" The minimum possible value of the maximum distance between adjacent gas stations is: "<< result << endl;
    return 0;
}


// optimal: by binary search
#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;
int noGasSta( long double dist, vector<int> &arr){
    int count =0;
    int n = arr.size();
    for ( int i =0; i<n; i++){
        int noinBetween = (arr[i]- arr[i-1])/ dist;
        if ( arr[i]- arr[i-1] == noinBetween * dist){
            noinBetween--;
        }
        count += noinBetween;
    }
    return count;
}
long double minMaxDist( vector<int> &arr, int k){
    int n = arr.size();
    long double low =0;
    long double high = 0;
    for ( int i=0; i<n-1; i++){
        high = max( high, (long double)( arr[i+1]- arr[i]));
    }
    long double diff= 1e-6;
    while( high - low > diff){
        long double mid = ( low + high)/2;
        int neededGasSta = noGasSta( mid, arr);
        if ( neededGasSta > k){
            low = mid;
        }
        else {
            high = mid;
        }
    }
    return high;
}
int main(){
    int n, k;
    cout<<" Enter the number of gas stations and additional gas stations: ";
    cin>> n >> k;
    vector <int> arr(n);
    cout<<" Enter the positions of the gas stations: ";
    for ( int i =0; i<n; i++){
        cin>> arr[i];
    }
    long double result = minMaxDist(arr, k);
    cout<<" The minimum possible value of the maximum distance between adjacent gas stations is: "<< result << endl;
    return 0;
}
