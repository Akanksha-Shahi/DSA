// Find Square Root of a number using Binary Search
// brute 
#include <iostream>
#include <vector>
using namespace std;
int floorsqrt( int n ){
    for ( int i =1; i<= n; i++){
        if ( i*i == n){
            return i;
        }
        else if ( i*i > n){
            return i-1;
        }
    }
}
int main(){
    int n;
    cout<<" Enter a number: ";
    cin>> n;
    int result = floorsqrt(n);
    cout<<" The floor square root of "<< n <<" is: "<< result << endl;
    return 0;
}

// optimal
#include <iostream>
#include <vector>
using namespace std;
int floorsqrt( int n ){
    int low =1, high = n;
    while (low<= high){
        int mid = ( low + high)/2;
        if ( mid*mid <= n){
            low = mid +1;;
        }
        else {
            high = mid -1;
        }
    }
    return high;
}
int main(){
    int n;
    cout<<" Enter a number: ";
    cin>> n;
    int result = floorsqrt(n);
    cout<<" The floor square root of "<< n <<" is: "<< result << endl;
    return 0;
}
