// Find Nth root of an integer
// brute : linear search approach
#include <iostream>
#include <vector>
#include <cmath>
using namespace std;
int nthRoot(int n, int m){
    for ( int i =1; i<= m; i++){
        if ( pow(i, n) == m){
            return i;
        }
        else if ( pow(i, n) > m){
            break;
        }
    }
    return -1;
}
int main(){
    int n, m;
    cout<<" Enter the value of n and m: ";
    cin>> n >> m;
    int result = nthRoot(n, m);
    if ( result != -1){
        cout<<" The "<< n <<"th root of "<< m <<" is: "<< result << endl;
    }
    else {
        cout<<" The "<< n <<"th root of "<< m <<" does not exist as an integer."<< endl;
    }
    return 0;
}

// optimal : binary search approach
#include <iostream>
#include <vector>
#include <cmath>
using namespace std;
// retrun 1 if == m
// return 0 if < m
// return 2 if > m
 int func( int mid, int n, int m){
    long long ans = 1;
    for ( int i =1; i<= n; i++){
        ans = ans * mid;
        if ( ans>m ) return 2;
    }
    if ( ans == m) return 1;
    return 0;
 }
int nthroot(int n, int m){
    int low =1, high = m;
    while ( low<= high){
        int mid = ( low + high)/2;
        int val = func(mid, n, m);
        if ( val == 1){
            return mid;
        }
        else if ( val ==0 ){
            low = mid +1;
        }
        else {
            high = mid -1;
        }
    }
    return -1;
}
int main(){
    int n, m;
    cout<<" Enter the value of n and m: ";
    cin>> n >> m;
    int result = nthroot(n, m);
    if ( result != -1){
        cout<<" The "<< n <<"th root of "<< m <<" is: "<< result << endl;
    }
    else {
        cout<<" The "<< n <<"th root of "<< m <<" does not exist as an integer."<< endl;
    }
    return 0;
} 
