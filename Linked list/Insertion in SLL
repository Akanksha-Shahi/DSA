// Insertion of ele to the head
Node* insertHead( Node * head, int val){
    Node* temp = new Node( val, head);
    return temp;
}

// Insertion of ele at last
Node* insertLast( Node* head, int val){
    if ( head == NULL) return new Node(val);
    Node*temp = head;
    while( temp->next != NULL){
        temp= temp->next;
    }
    Node* newNode = new Node(val);
    temp->next = newNode;
    return head;
}

// Insert at a  specific position
Node* insertPos( Node* head, int el, int k){
    if ( head == NULL){
        if ( k ==1){
            return new Node(el);
        }
        else {
            return head;
        }
    }
    if( k==1){
        return new Node ( el, head);
    }
    int count =0;
    Node* temp = head;
    while ( temp!= NULL){
        count++;
        if( count== (k-1)){
            Node* x = new Node( el, temp->next);
            temp->next  =x;
            break;
            }
            temp= temp->next;
        }
        return head;
    }

// Insert at a  specific position ( based on value)
Node* insertPos( Node* head, int el, int val){
    if ( head == NULL){
        return NULL;
    }
    if( head->data == val){
        return new Node ( el, head);
    }
    
    Node* temp = head;
    while ( temp->next != NULL){
        
        if( temp->next->data == val){
            Node* x = new Node( el, temp->next);
            temp->next  =x;
            break;
            }
            temp= temp->next;
        }
        return head;
    }
