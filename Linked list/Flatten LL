#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;
class Node {
    public:
    int data;
    Node* next;
    Node* prev;
    Node* child;

    public:
    Node( int data1, Node* next1, Node* prev1, Node* child1) {         // constructor
        data = data1;
        next = next1;
        prev = prev1;
        child = child1;
    }

    public:
    Node (int data1) {         // constructor
        data = data1;
        next = nullptr;
        prev = nullptr;
        child = nullptr;
    }
};
// brute: take all integers and put it in an array 
Node* convert( vector<int>& arr){
    if ( arr.size() == 0) return NULL;
    Node* head = new Node( arr[0]);
    Node* temp = head;
    for( int i = 1; i < arr.size(); i++){
        Node* newNode = new Node( arr[i]);
        temp->child = newNode;
        temp = temp->child;
    }
    return head;
} ;
Node* flattenLL( Node* head ){
    if ( head == NULL) return NULL;
    vector<int> arr;
    Node* temp = head;
    while( temp != NULL){
        Node* downNode = temp;
        while( downNode != NULL){
            arr.push_back( downNode->data);
            downNode = downNode->child;
        }
        temp = temp->next;
    }
    sort( arr.begin(), arr.end());
    Node* head = convert(arr);    
} ;

// optimal: instead of creating newLL we can rearrange the pointers of existing LL
Node* mergeTwoSortedLLOptimal( Node* head1, Node* head2){
    if ( head1 == NULL) return head2;
    if ( head2 == NULL) return head1;
    Node* dummy = new Node(-1);
    Node* mover = dummy;
    Node* temp1 = head1;
    Node* temp2 = head2;
    while( temp1 != NULL && temp2 != NULL){
        if ( temp1->data < temp2->data){
            mover->child = temp1;
            mover = temp1;
            temp1 = temp1->next;
        }
        else{
            mover->child = temp2;
            mover = temp2;
            temp2 = temp2->next;
        }
        mover->next = NULL;
    }
    if ( temp1 != NULL) mover->child = temp1;
    if ( temp2 != NULL) mover->child = temp2;
    return dummy->child;
};
Node* flattenLLOptimal( Node* head){
    if ( head == NULL || head->next == NULL) return head;
    Node* mergeHead = flattenLLOptimal( head->next);
    return mergeTwoSortedLLOptimal( head, mergeHead);
};
int main(){
    return 0;
}
