#include <iostream>
using namespace std;
class Node {
    public:
    int data;
    Node* next;
    Node* prev;

    public:
    Node( int data1, Node* next1, Node* prev1) {         // constructor
        data = data1;
        next = next1;
        prev = prev1;
    }

    public:
    Node (int data1) {         // constructor
        data = data1;
        next = nullptr;
        prev = nullptr;
    }
};
Node * reverse( Node* head){
    if ( head == NULL || head->next == NULL) return head;
    Node* newhead = reverse( head->next);
    Node* front = head->next;
    front->next = head;
    head->next = NULL;
    return newhead;
};
Node* findKNode( Node* head, int k){
    Node* temp = head;
    while( k -1 && temp != NULL){
        temp = temp->next;
        k--;
    }
    return temp;
} ;
Node* reverseinKGrp(Node* head, int k){
    if ( head == NULL || k <= 1) return head;
    Node* temp = head;
    Node* prevNode = NULL;
    while( temp!= NULL){
        Node* KNode = findKNode ( temp, k);
        if ( KNode == NULL) prevNode->next = temp; break;
        Node* nextNode = KNode->next;
        KNode->next = NULL;
        Node* reversedHead = reverse( temp);
        if ( temp == head) head = KNode;
        else{
            prevNode->next = KNode;
        }
        prevNode = temp;
        temp = nextNode;
    }
    return head;
}
int main(){
    return 0;
}
