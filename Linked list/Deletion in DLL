// deletion of first node in doubly linked list
Node* deleteFirstDLL( Node* head){
    if ( head == NULL || head->next == NULL) return head;
    Node* prev = head;
    head = head->next;
    head->back = NULL;
    prev->next = NULL;
    free( prev);
    return head;
}

// deletion of last node in doubly linked list
Node* deleteLastDLL( Node* head){
    if ( head == NULL || head->next == NULL) return NULL;
    Node* tail = head;
    while( tail->next != NULL){
        tail = tail->next;
    }
    Node* newTail = tail->back;
    newTail->next = NULL;
    tail->back = NULL;
    free( tail);
    return head;
} 

// deletion of node at specific position in doubly linked list
Node* deletePosDLL( Node* head, int k){
    if ( head == NULL) return NULL;
    int count = 0;
    Node*knode = head;;
    while( knode!= NULL){
        count ++;
        if ( count == k){
            break;
        }
        knode = knode->next;
    }
    Node* prev = knode->back;
    Node* front = knode->next;
    if( prev == NULL && front == NULL){
        free( knode);
        return NULL;
    }
    else if ( prev == NULL){
        return deleteFirstDLL(head);
    }
    else if ( front == NULL){
        return deleteLastDLL(head);
    }
    else {
        prev->next = front;
        front->back = prev;
        knode->next = NULL;
        knode->back = NULL;
        free( knode);
    }
    return head;
}

// deletion of node in doubly linked list [ here the node given is never the head of LL { constraint }]
Node* deleteValDLL( Node* temp){
    Node* prev = temp->back;
    Node* front = temp->next;
    
    if ( front == NULL){
        prev->next = NULL;
        temp->back = NULL;
        free( temp);
        return;
    }
    prev->next = front;
    front->back = prev;
    temp->next = NULL;
    temp->back = NULL;
    free( temp);
  
}
