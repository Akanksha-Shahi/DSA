// brute: use map to store address of nodes
#include <iostream>
using namespace std;
class Node {
    public:
    int data;
    Node* next;

    public:
    Node( int data1, Node* next1) {         // constructor
        data = data1;
        next = next1;
    }

    public:
    Node (int data1) {         // constructor
        data = data1;
        next = nullptr;
    }
};
bool detectLoop( Node* head){
    unordered_map<Node*, int> map;
    Node* temp = head;
    while( temp != NULL){
        if ( map.find( temp) != map.end()){
            return true;
        }
        map[temp] = true;
        temp = temp->next;
    }
    return false;
};

// optimal: slow and fast pointer
bool detectLoop1( Node* head){
    Node* slow = head;
    Node* fast = head;
    while( fast != NULL && fast->next != NULL){
        slow = slow->next;
        fast = fast->next->next;
        if ( slow == fast) return true;
    }
    return false;
};
int main(){
    return 0;
}
