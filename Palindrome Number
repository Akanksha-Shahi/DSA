#include<iostream>
using namespace std;
int revNum(int n) {
  int revNum = 0;
  int duplicate = n;     // Store the original number
  while (n >0){
    int lastdigit = n % 10;
    revNum = (revNum * 10) + lastdigit;
    n = n/10;
  }
  if (duplicate == revNum){
    cout<< " The number is a palindrome."<< endl;
  } else {
    cout<< " The number is not a palindrome."<< endl;
  }
};
int main(){
  int n = 121;
  cout<< " Checking palindrome for: "<< n<< endl;
  revNum(n);
  return 0;
}
