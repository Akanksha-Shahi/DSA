#include<iostream>
#include<unordered_map>
using namespace std;
// brute: O(n^2) generate all substrings using 'i' and 'j' [ using hashmap ] 
int func( string s){
    int len =0;
    unordered_map<char, int> charIndexMap;
    int maxLength =0;
    for( int i =0; i<s.length(); i++){
        int hash[256] = {0}; // initialize all to 0
        for( int j=i; j<s.length(); j++){
            if( hash[s[j]] == 1) break; // repeating character found
            len = j - i + 1;
            maxLength = max( maxLength, len);
            hash[s[j]] = 1; // mark character as found
        }    
    }
    return maxLength;
}

// optimal : O(n) using sliding window
int funct( string s){
    unordered_map<char, int> charIndexMap;
    int hash[256] = {-1}; // initialize all to -1
    int left =0, right =0;
    int maxLength =0;
    while( right < s.length()){
        if( hash[s[right]] != -1){ // character already found
            if( hash[s[right]] >= left){
                left = hash[s[right]] + 1;
            }
        }
    int len = right - left + 1;
    maxLength = max( maxLength, len);    
    hash[s[right]] = right; // update character index
    right++;
    }
    return maxLength;
}
int main(){
    string s= "abcabcbb";
    int ans= func( s);
    cout<< ans<< endl;
    return 0;
}
