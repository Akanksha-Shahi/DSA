// better solution: count = 0, count1 = 1 , count2 = 2 and the n itreate and increase the value of count
#include<iostream>
#include<vector>
using namespace std;
void sort012( vector<int> &arr, int n ){
    int count = 0, count1 = 0, count2 = 0;
    for ( int i = 0; i < n; i++ ){
        if ( arr[i] == 0 ){
            count++; // counts the number of 0s
        } else if ( arr[i] == 1 ){
            count1++; // counts the number of 1s
        } else {
            count2++; // counts the number of 2s
        }
    }
    int i = 0;
    for (i = 0; i < count; i++ ){
        arr[i] = 0; // fills the array with 0s
    }
    for (i=count; i < count + count1; i++ ){
        arr[i] = 1; // fills the array with 1s
    }
    for (i = count + count1; i < n; i++ ){
        arr[i] = 2; // fills the array with 2s
    }
}
int main(){
    int n;
    cout<<" enter the size of the array:";
    cin>>n;
    vector<int> arr(n);
    cout<<" enter the elements of the array:";
    for( int i=0; i<n; i++){
        cin>> arr[i]; // reads the elements of the array
    }
    sort012(arr, n);
    cout<<" sorted array is: ";
    for ( int i=0; i<n; i++){
        cout<< arr[i]<< " "; // prints the sorted array
    }
    return 0;
}
