// brute force solution
#include <iostream>
#include<vector>
using namespace std;
int findmaxConsecutiveOnes(vector<int> &arr) {
    int count = 0; // to count the current number of consecutive ones
    int maxCount = 0; // to store the maximum number of consecutive ones found
    for (int i = 0; i < arr.size(); i++) {
        if (arr[i] == 1) {
            count++; // increment count if the current element is 1
            maxCount = max(maxCount, count); // update maxCount if needed
        } else {
            count = 0; // reset count if the current element is 0
        }
    }
    return maxCount; // return the maximum number of consecutive ones found
}
int main(){
    int n;
    cout<<" enter the size of array:";
    cin>> n;
    vector<int> arr (n);
    cout<<" enter the elements of array:";
    for ( int i=0; i<n; i++){
        cin>> arr[i]; // reads the elements of the array
    }
    int result = findmaxConsecutiveOnes(arr);
    cout<<" the maximum number of consecutive ones is: "<< result<< endl;
    return 0;
}
