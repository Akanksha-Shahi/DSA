// bruute : O(n^3) approach
#include <iostream>
#include <vector>
#include <unordered_map>
using namespace std;
vector<vector<int>> subarray(vector<int> &arr,int k){
    int n = arr.size();
    vector<vector<int>> ans;
    for(int i=0;i<n;i++){
        for(int j=i;j<n;j++){
            int xorSum = 0;
            vector<int> temp;
            for(int m=i;m<=j;m++){
                xorSum ^= arr[m];
                temp.push_back(arr[m]);
            }
            if(xorSum == k){
                ans.push_back(temp);
            }
        }
    }
    return ans;
}
int main(){
    int n;
    cout<<"Enter the size of array: ";
    cin>>n;
    vector<int> arr(n);
    cout<<"Enter the elements of array: ";
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    int k;
    cout<<"Enter the target XOR value: ";
    cin>>k;
    vector<vector<int>> result = subarray(arr,k);
    cout<<"The subarrays with XOR "<<k<<" are: "<<endl;
    for(auto subarr : result){
        for(auto val : subarr){
            cout<<val<<" ";
        }
        cout<<endl;
    }
    return 0;
}


// better: O(n^2) approach
#include <iostream>
#include <vector>
#include <unordered_map>
using namespace std;
vector<vector<int>> subarray(vector<int> &arr, int k){
    int n = arr.size();
    vector<vector<int>> ans;
    for(int i=0;i<n;i++){
        int xorSum = 0;
        vector<int> temp;
        for(int j=i;j<n;j++){
            xorSum ^= arr[j];
            temp.push_back(arr[j]);
            if(xorSum == k){
                ans.push_back(temp);
            }
        }
    }
    return ans;
}
int main(){
    int n;
    cout<<"Enter the size of array: ";
    cin>>n;
    vector<int> arr(n);
    cout<<"Enter the elements of array: ";
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    int k;
    cout<<"Enter the target XOR value: ";
    cin>>k;
    vector<vector<int>> result = subarray(arr,k);
    cout<<"The subarrays with XOR "<<k<<" are: "<<endl;
    for(auto subarr : result){
        for(auto val : subarr){
            cout<<val<<" ";
        }
        cout<<endl;
    }
    return 0;
}


// optimal: O(n) approach
#include <iostream>
#include <vector>
#include <map>
using namespace std;
vector<vector<int>> subarray(vector<int> &arr, int k){
    int n = arr.size();
    vector<vector<int>> ans;
    int xr= 0;
    map<int, int> mpp;
    mpp[xr]++;
    int count=0;
    for(int i=0;i<n;i++){
        xr ^= arr[i];
        int required_xor = xr ^ k;
        count += mpp[required_xor];
        mpp[xr]++;
    }
     return count;
    }
int main(){
    int n;
    cout<<"Enter the size of array: ";
    cin>>n;
    vector<int> arr(n);
    cout<<"Enter the elements of array: ";
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    int k;
    cout<<"Enter the target XOR value: ";
    cin>>k;
    int result = subarray(arr,k);
    cout<<"The count of subarrays with XOR "<<k<<" is: "<<result<<endl;
    return 0;
}

