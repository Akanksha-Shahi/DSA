// brute: pick up an element and check if it is greater than all the elements to its right then its a leader
#include<iostream>
#include<vector>
using namespace std;
vector<int> leadersInArray( vector<int> &arr){
    int n = arr.size();
    vector<int> leaders;
    for ( int i=0; i<n; i++){
        bool isLeader = true;
        for ( int j=i+1; j<n; j++){
            if ( arr[j] > arr[i]){
                isLeader = false; // if any element to the right is greater, it's not a leader
                break;
            }
        }
        if ( isLeader ){
            leaders.push_back(arr[i]); // adds the leader to the list
        }
    }
    return leaders;
}
int main(){
    int n;
    cout<<" enter the size of array:";
    cin>>n;
    vector<int> arr(n);
    cout<<" enter the elements of the array:";
    for ( int i=0; i<n; i++){
        cin>> arr[i]; // reads the elements of the array
    }
    vector<int> leaders = leadersInArray(arr);
    cout<<" leaders in the array are: ";
    for ( int leader : leaders){
        cout<< leader<< " "; // prints the leaders
    }
    return 0;
}



// optimal: take one elemnet and for the remaining elements check if it is greater than the current max element
#include<iostream>
#include<vector>
using namespace std;
vector<int> leadersInArray( vector<int> &arr){
    vector<int> ans;
    int maxi= INT_MIN;
    int n = arr.size();
    // o (n)
    for ( int i=n-1; i>=0; i--){
        if ( arr[i] >= maxi ){
            ans.push_back(arr[i]); // adds the leader to the list
        }
        // keeps track of right maximum
        maxi = max( maxi, arr[i]);
    }
    sort (ans.begin(), ans.end()); // sorts the leaders in ascending order
    return ans;}
int main(){
    int n;
    cout<<" enter the size of array:";
    cin>>n;
    vector<int> arr(n);
    cout<<" enter the elements of the array:";
    for ( int i=0; i<n; i++){
        cin>> arr[i]; // reads the elements of the array
    }
    vector<int> leaders = leadersInArray(arr);
    cout<<" leaders in the array are: ";
    for ( int leader : leaders){
        cout<< leader<< " "; // prints the leaders
    }
    return 0;
}    
